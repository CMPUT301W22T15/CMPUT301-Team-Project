<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyScans">

    <TextView
        android:id="@+id/total_scans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Scans:"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sort_by_date"
        app:layout_constraintEnd_toStartOf="@+id/total_score"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/total_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Score:"
        android:textSize="22dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sort_by_score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/total_scans"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/sort_by_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By Date"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/total_scans"
        app:layout_constraintBottom_toTopOf="@id/scan_list"
        app:layout_constraintEnd_toStartOf="@+id/sort_by_score"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="20dp"/>

    <Button
        android:id="@+id/sort_by_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort By Score"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/total_score"
        app:layout_constraintBottom_toTopOf="@id/scan_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/sort_by_date"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp" />

    <ListView
        android:id = "@+id/scan_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        tools:layout_editor_absoluteY="160dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.qrgameteam15">
    <!-- Add permission to use camera and autofocus -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />


    <!-- Added more permission for taking photos and storing it (EL-start)-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <!-- Added more permission for taking photos and storing it (EL-end)-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRGameTeam15">
        <activity
            android:name=".TakePhoto"
            android:exported="false" />
        <activity
            android:name=".UserMenu"
            android:exported="false" />
        <activity
            android:name=".ExistingUser"
            android:exported="false" />
        <activity
            android:name=".NewUser"
            android:exported="false" />
        <activity
            android:name=".ScannerView2"
            android:exported="false" />
        <activity
            android:name=".QRCodeEditor"
            android:exported="false" />
        <activity
            android:name=".ScannerView"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--EL-start take photo stuff-->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths"></meta-data>
        </provider>
        <!--EL-end take photo stuff-->

    </application>

</manifest>